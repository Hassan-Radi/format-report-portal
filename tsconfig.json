{
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "test/**/*.spec.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node16",
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  }
}
